{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenPress Backend (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/backend/builds/openpress-server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/backend",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build OpenPress (Backend)"
        },
        {
            "name": "Launch Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "preLaunchTask": "bun: dev (Frontend)"
        }
    ]
}