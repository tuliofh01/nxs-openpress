{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Logic",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-shared",
                "-fPIC",
                "-o",
                "${workspaceFolder}/libs/cpp_libs/liblogic.so",
                "${workspaceFolder}/src/cpp_src/code/logic.cpp"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build OpenPress",
            "type": "shell",
            "command": "dub",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Build C++ Logic"],
            "problemMatcher": ["$dmd"]
        },
        {
            "label": "Run OpenPress",
            "type": "shell",
            "command": "dub",
            "args": ["run"],
            "dependsOn": ["Build C++ Logic"],
            "problemMatcher": ["$dmd"]
        },
        {
            "label": "Test OpenPress",
            "type": "shell",
            "command": "dub",
            "args": ["test"],
            "dependsOn": ["Build C++ Logic"],
            "group": "test",
            "problemMatcher": ["$dmd"]
        },
        {
            "label": "Clean OpenPress",
            "type": "shell",
            "command": "dub",
            "args": ["clean"],
            "problemMatcher": []
        },
        {
            "label": "Generate UML",
            "type": "shell",
            "command": "${workspaceFolder}/src/scripts/generate_uml.sh",
            "group": "doc"
        }
    ]
}